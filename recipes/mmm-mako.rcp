(:name mmm-mako
       :website "https://bitbucket.org/pjenvey/mmm-mako"
       :description "Mako mode for emacs' mmm-mode."
       :type hg
       :url "https://bitbucket.org/pjenvey/mmm-mako"
       :depends mmm-mode
       :post-init (progn
                    (add-to-list 'auto-mode-alist
                                 '("\\.mako\\'" . html-mode))
                    (mmm-add-mode-ext-class 
                     'html-mode "\\.mako\\'" 'mako))
       :features mmm-mako)
